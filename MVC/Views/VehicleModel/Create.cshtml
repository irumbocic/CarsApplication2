@model MVC.ViewModels.VehicleModelViewModel
@{ ViewData["Title"] = "Create Vehicle Model"; }


<form method="post" asp-action="CreatePost">

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Create Vehicle Model</h2>
        </div>
        <div class="form-group">
            <label asp-for="Name">Insert Name</label>
            <input asp-for="Name" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="Abrv">Insert Abrv</label>
            <input asp-for="Abrv" class="form-control" />

        </div>
        <div class="form-group">
            @*<label asp-for="MakeId">Insert Vehicle Make Id</label>
                <input asp-for="MakeId" class="form-control" />*@
            <label asp-for="MakeId">Select Make Name</label>
            @Html.DropDownListFor(m => m.MakeId, (IEnumerable<SelectListItem>)ViewBag.viewMakeNameList)

        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
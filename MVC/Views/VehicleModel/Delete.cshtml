@model Service.Models.VehicleModel
@{
    ViewData["Title"] = "Delete Vehicle Model";
}


<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Vehicle Model</h2="text-info>
        </div>
        <div class="form-group">
            <input asp-for="Name" disabled class="form-control"/>
        </div>
        <div class="form-group">
            <input asp-for="Abrv" disabled class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>